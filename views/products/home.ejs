<% layout('layouts/boilerplate')%>

<div>
  <a href="/new">Add product</a>
</div>
<% for (let product of products){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text">
          <a class="btn btn-primary" href="/<%=product._id%>"
            >View <%=product.name%></a
          >
        </p>
      </div>
    </div>
  </div>
</div>
<% } %>
